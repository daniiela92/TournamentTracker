<Window x:Class="TrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackerUI"
        mc:Ignorable="d"
        Title="Tournament Viewer" Height="420" Width="600" FontFamily="Segoe UI">
    <Grid Margin="16">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="5"
            Foreground="DodgerBlue"
            FontFamily="Segoe UI" 
            FontSize="28"
            Margin="0, 0, 0, 12"> Tournament:
        <Run x:Name="tournamentNameRun" Text="none"/>
        </TextBlock>

        
        <TextBlock
            Grid.Row="1" 
            Grid.Column="0"
            Text="Round:"
            Foreground="DodgerBlue"
            FontSize="20"
            Margin="0,0,12,0"
            VerticalAlignment="Center"/>

        <ComboBox 
            x:Name="roundDropDown" 
            Grid.Row="1"
            Grid.Column="1"
            Width="180"
            Margin="0,2,0,0"/>

        <CheckBox 
             x:Name="unplayedOnlyCheckBox"
             Grid.Row="2"
             Grid.Column="1"
             Content="Unplayed Only" 
             Foreground="DodgerBlue"
             FontFamily="Segoe UI"
             FontSize="14" 
             Margin="0,8,0,12"/>
        
      
        <ListBox
            x:Name="matchupListBox"
            Grid.Row="3" 
            Grid.ColumnSpan="5" 
            MinHeight="160"
            Margin="0,0,0,20"/>

        <Border 
            Grid.Row="4"
            Grid.Column="1"
            BorderBrush="DodgerBlue" 
            BorderThickness="1"
            CornerRadius="3" 
            Padding="6"
            Margin="0,0,0,6"
            HorizontalAlignment="Center">
            <TextBlock Text="Team one" Foreground="DodgerBlue" FontSize="14"/>
        </Border>

        <Border 
            Grid.Row="4"
            Grid.Column="3"
            BorderBrush="DodgerBlue" 
            BorderThickness="1"
            CornerRadius="3"
            Padding="6" 
            Margin="0,0,0,6"
            HorizontalAlignment="Center">
            <TextBlock Text="Team two" Foreground="DodgerBlue" FontSize="14"/>
        </Border>

        <!-- SCORES (label junto da caixa) + BOTÃO ao lado da caixa da direita -->
        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Score:" Foreground="DodgerBlue" FontSize="16"
                   Margin="0,0,8,0" VerticalAlignment="Center"/>

        <TextBox   Grid.Row="5" Grid.Column="1" x:Name="teamOneScoreValue"
                   Width="90" MinHeight="26" VerticalContentAlignment="Center"/>

        <TextBlock Grid.Row="5" Grid.Column="2"
                   Text="Score:" Foreground="DodgerBlue" FontSize="16"
                   Margin="24,0,8,0" VerticalAlignment="Center"/>

        <TextBox   Grid.Row="5" Grid.Column="3" x:Name="teamTwoScoreValue"
                   Width="90" MinHeight="26" VerticalContentAlignment="Center"/>

        <Button Grid.Row="5" Grid.Column="4"
                Content="Score" Padding="12,6"
                HorizontalAlignment="Left" Margin="12,0,0,0"/>
    </Grid>
</Window> 
