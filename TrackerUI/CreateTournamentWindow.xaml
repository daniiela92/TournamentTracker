<Window x:Class="TrackerUI.CreateTournamentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Tournament" Height="600" Width="900"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
            x:Name="headerLabel"
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="3"
            Text="Create Tournament"
            Foreground="DodgerBlue" 
            FontSize="28" 
            Margin="0,0,0,20"/>

        <TextBlock 
            x:Name="tournamentNameLabel"
            Grid.Row="1"
            Grid.Column="0" 
            Text="Tournament Name" 
            Foreground="DodgerBlue" 
            FontSize="16"/>
        <TextBox 
            x:Name="tournamentNameValue"
            Grid.Row="1" 
            Grid.Column="0" 
            Margin="0,24,102,12"
            Height="28"/>

        <TextBlock 
            x:Name="entryFeeLabel"
            Grid.Row="2" 
            Grid.Column="0"
            Text="Entry Fee" 
            Foreground="DodgerBlue"
            FontSize="16"/>
        <TextBox 
            x:Name="entryFeeValue"
            Grid.Row="2"
            Grid.Column="0"
            Margin="80,0,0,12"
            Width="80" 
            Text="0"/>

        <Grid Grid.Row="3" Grid.Column="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock 
                x:Name="selectTeamLabel"
                Grid.Column="0" 
                Text="Select Team" 
                Foreground="DodgerBlue" 
                FontSize="16"/>
            <TextBlock 
                x:Name="createNewTeamLink"
                Grid.Column="1" 
                Text="create new" 
                Foreground="Blue" FontSize="14"
                Margin="12,0,0,0"
                TextDecorations="Underline"
                Cursor="Hand"
                HorizontalAlignment="Left"/>
        </Grid>
        <ComboBox 
            x:Name="selectTeamDropDown"
            Grid.Row="3" 
            Grid.Column="0"
            Margin="0,28,102,12" 
            Height="28"/>

        <Button 
            x:Name="addTeamButton"
            Grid.Row="4" 
            Grid.Column="0" 
            Content="Add Team" 
            Width="140"
            Height="35" 
            Margin="0,0,0,16"/>
        <Button 
            x:Name="createPrizeButton"
            Grid.Row="4"
            Grid.Column="0"
            Content="Create Prize"
            Width="140" 
            Height="35" 
            Margin="0,60,0,0"/>

        <TextBlock
            x:Name="teamsPlayersLabel"
            Grid.Row="1" 
            Grid.Column="1" 
            Text="Teams / Players"
            Foreground="DodgerBlue" 
            FontSize="16" 
            Margin="0,0,0,4"/>
        <ListBox 
            x:Name="tournamentPlayersListBox"
            Grid.Row="1" 
            Grid.RowSpan="3" 
            Grid.Column="1"
            Margin="0,24,0,12" 
            MinHeight="120"/>
        <Button
            x:Name="deleteSelectedTeamButton"
            Grid.Row="1" 
            Grid.Column="2" 
            Content="Delete Selected"
            Width="120"
            Height="35"
            Margin="12,24,0,0"/>

        <TextBlock 
            Grid.Row="4" 
            Grid.Column="1" 
            Text="Teams / Players"
            Foreground="DodgerBlue" 
            FontSize="16" 
            Margin="0,0,0,4"/>
        <ListBox 
            x:Name="prizesListBox"
            Grid.Row="4" 
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="0,24,0,12" 
            MinHeight="120"/>
        <Button 
            x:Name="deleteSelectedPrizeButton"
            Grid.Row="4" 
            Grid.Column="2" 
            Content="Delete Selected"
            Width="120"
            Height="35"
            Margin="12,24,0,0"/>

        <Button 
            x:Name="createTournamentButton"
            Grid.Row="6" 
            Grid.Column="0" 
            Grid.ColumnSpan="3"
            Content="Create Tournament"
            Width="240" Height="50"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"/>
    </Grid>
</Window>

